{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd Travel.Api && dotnet publish -c Release -o ../out"
  },
  "deploy": {
    "startCommand": "cd out && dotnet Travel.Api.dll",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
