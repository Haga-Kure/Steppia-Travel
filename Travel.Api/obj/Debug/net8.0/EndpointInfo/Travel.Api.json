{
  "openapi": "3.0.1",
  "info": {
    "title": "Travel.Api",
    "version": "1.0"
  },
  "paths": {
    "/health/mongo": {
      "get": {
        "tags": [
          "Travel.Api"
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/tours": {
      "get": {
        "tags": [
          "Travel.Api"
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/tours/{slug}": {
      "get": {
        "tags": [
          "Travel.Api"
        ],
        "parameters": [
          {
            "name": "slug",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/bookings": {
      "post": {
        "tags": [
          "Travel.Api"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateBookingRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/bookings/{bookingCode}": {
      "get": {
        "tags": [
          "Travel.Api"
        ],
        "parameters": [
          {
            "name": "bookingCode",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/payments": {
      "post": {
        "tags": [
          "Travel.Api"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreatePaymentRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/payments/webhook": {
      "post": {
        "tags": [
          "Travel.Api"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/PaymentWebhookRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "CreateBookingContact": {
        "type": "object",
        "properties": {
          "fullName": {
            "type": "string",
            "nullable": true
          },
          "email": {
            "type": "string",
            "nullable": true
          },
          "phone": {
            "type": "string",
            "nullable": true
          },
          "country": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "CreateBookingGuest": {
        "type": "object",
        "properties": {
          "fullName": {
            "type": "string",
            "nullable": true
          },
          "age": {
            "type": "integer",
            "format": "int32",
            "nullable": true
          },
          "passportNo": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "CreateBookingRequest": {
        "type": "object",
        "properties": {
          "tourId": {
            "type": "string",
            "nullable": true
          },
          "tourType": {
            "type": "string",
            "nullable": true
          },
          "tourDateId": {
            "type": "string",
            "nullable": true
          },
          "travelDate": {
            "type": "string",
            "format": "date-time",
            "nullable": true
          },
          "contact": {
            "$ref": "#/components/schemas/CreateBookingContact"
          },
          "guests": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/CreateBookingGuest"
            },
            "nullable": true
          },
          "specialRequests": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "CreatePaymentRequest": {
        "type": "object",
        "properties": {
          "bookingCode": {
            "type": "string",
            "nullable": true
          },
          "provider": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "PaymentWebhookRequest": {
        "type": "object",
        "properties": {
          "provider": {
            "type": "string",
            "nullable": true
          },
          "invoiceId": {
            "type": "string",
            "nullable": true
          },
          "status": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      }
    }
  }
}